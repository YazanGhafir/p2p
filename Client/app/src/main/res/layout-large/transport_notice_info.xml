<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFc914">

    <LinearLayout
        android:id="@+id/transporternoticeinfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffa100"
            android:padding="5dp"
            android:text="Notice type"
            android:textSize="25sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/noticeTypeItem"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffba00"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/textView27"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffa100"
            android:padding="5dp"
            android:text="Telephone number"
            android:textSize="25sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/accountIdItem"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffba00"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffa100"
            android:padding="5dp"
            android:text="Transport informtion"
            android:textStyle="bold|italic"
            android:textSize="25sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffa100"
            android:orientation="horizontal"
            android:textSize="25sp">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="@string/from"
                android:textStyle="bold|italic"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/textView20"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="@string/to"
                android:textStyle="bold|italic"
                android:textSize="25sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Delivery date"
                android:textStyle="bold|italic"
                android:textSize="25sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffba00"
            android:orientation="horizontal"
            android:textSize="25sp">

            <TextView
                android:id="@+id/fromItem"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/toItem"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/dateItem"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:textSize="25sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffa100"
            android:padding="5dp"
            android:text="Package information"
            android:textStyle="bold|italic"
            android:textSize="25sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffa100"
            android:orientation="horizontal"
            android:textSize="25sp">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Capacity"
                android:textStyle="bold|italic"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/textView24"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Means of transport"
                android:textStyle="bold|italic"
                android:textSize="25sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffba00"
            android:orientation="horizontal"
            android:textSize="25sp">

            <TextView
                android:id="@+id/capacityItem"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/meansItem"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="#ffba00"
                android:textSize="25sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffa100"
            android:padding="5dp"
            android:text="Price information"
            android:textStyle="bold|italic"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/priceItem"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffba00"
            android:textSize="25sp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>